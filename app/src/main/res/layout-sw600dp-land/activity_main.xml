<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <View
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#106D59"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VangtiChai"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Taka Label -->
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Taka: 0"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/changeContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/tvAmount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline">

        <TextView
            android:id="@+id/tv500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="500: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1: 0"
            android:textSize="@dimen/text_medium"
            android:padding="4dp"/>

    </LinearLayout>

    <!-- Row 1 -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="1"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@id/tvAmount"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="2"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintBottom_toBottomOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="3"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintBottom_toBottomOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <!-- Row 2 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="4"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="5"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintBottom_toBottomOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="6"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintBottom_toBottomOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <!-- Row 3 -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="7"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="8"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintBottom_toBottomOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="9"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintBottom_toBottomOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <!-- Row 4 -->
    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="0"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@id/btnClear"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="Clear"
        android:textSize="@dimen/text_medium"
        app:layout_constraintTop_toTopOf="@id/btn0"
        app:layout_constraintBottom_toBottomOf="@id/btn0"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="#AAAAAA"
        android:textColor="#000000"
        app:cornerRadius="6dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
